{
  "name": "electron-from-scratch",
  "version": "1.0.0",
  "description": "DXM & GRU try to make a first-principles minimal electron buddy",
  "main": "dist/main/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/mcgrue/electron-from-scratch.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "yarn pre-build && echo DONE ESBUILD'N && echo START ELECTRON BUILDIN' && electron-builder",
    "pre-build": "node build-infrastructure/esbuild.js",
    "iterate": "yarn pre-build && echo DONE ESBUILD'N && echo START && yarn start",
    "debug-in-chrome": "electron . --inspect-brk",
    "build-types": " TODO - ask DXM wtf to pass to tsc! ",
    "test": "jest",
    "test-watch": "jest --watch"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.0.1",
    "is-electron": "^2.2.2",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "react-dockable-ts": "https://github.com/breadbros/react-dockable-ts#v0.0.10",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "5.16.0",
    "@typescript-eslint/parser": "5.16.0",
    "electron": "^19.0.4",
    "electron-builder": "^23.0.3",
    "esbuild": "^0.14.39",
    "esbuild-copy-static-files": "^0.1.0",
    "esbuild-css-modules-plugin": "^2.7.1",
    "esbuild-plugin-copy": "^2.0.2",
    "eslint": "8.11.0",
    "jest": "^28.1.0",
    "jest-css-modules-transform": "^4.4.2",
    "jest-environment-jsdom": "^29.4.3",
    "jsdom": "^21.1.0",
    "rimraf": "^4.3.0",
    "ts-jest": "^28.0.4",
    "typescript": "^4.6.2",
    "typescript-plugin-css-modules": "^4.2.2"
  },
  "build": {
    "appId": "com.gruniverse.danielstyle/yolo",
    "files": [
      "dist/**"
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": "portable"
    },
    "directories": {
      "buildResources": "electronbuild-resources",
      "output": "electronbuild-output"
    }
  },
  "nsis": {
    "oneClick": false,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}
